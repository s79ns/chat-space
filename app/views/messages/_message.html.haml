.messages__box
  .messages__box__intro
    .messages__box__intro__name
      = message.user.name
    .messages__box__intro__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messages__coments
    - if message.content.present?
      %p.message.content
    = message.content
  = image_tag message.image.url, class: 'Message__image' if message.image.present?